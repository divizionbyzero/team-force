      display block
      text-align center
      color color_default
      font-size 22px
      font-weight normal
  &__shops
    background-color #fff
    padding-top 1em
    margin-bottom 3em
  &__submit
    padding-top 3em
    >div
      width 100%
      text-align center
    button
      margin 0 auto
      width 220px

.shopChoices
  text-align center
  display flex
  flex-flow row wrap
  justify-content center
  width 60%
  margin 0 auto

.shopChoice
  display inline-block
  vertical-align top
  width 31%
  margin 2% 0
  &__img
    cursor pointer
    background-size contain
    background-repeat no-repeat
    display block
    width 205px
    height 144px
    margin 3px
    opacity 0.6
    color: transparent
    transition: opacity .2s
    &:hover
      opacity 1
  input
    margin 0
    padding 0
    appearance none
    &:active +.shopChoice__img
      opacity 0.9
    &:checked +.shopChoice__img
      opacity 1
      border 3px solid color_light_blue

#map{
  width 100%;
  height 200px
  padding 0
  margin 0
}

