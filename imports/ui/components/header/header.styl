.header
  &__item
    margin 0 15px
    color #282828
    height 100%
    display inline-block
    text-transform lowercase
    font-size 15px
    font-weight 100
    transition opacity .15s ease-in-out
    padding 0 !important
    line-height 50px !important
    .active
      background transparent
      font-weight bold
    &:hover
      background-color transparent !important
    &--upper
      letter-spacing 1px
      text-transform: uppercase
      font-size 14px
      margin 0 21px
      vertical-align top
  .navbar
    height 50px
    background-color #C6C5B9
    padding 0 20px
    box-shadow 0 1px 6px rgba(0, 0, 0, 0.09)
    border-bottom 1px solid #bfbeb1
  .icon-bar
      background #3498db

    .navbar-brand
      color color_default
      font-size 27px
      font-weight 500
      margin-right 30px
      opacity .8
      height 100%
      vertical-align top
      line-height 50px
      letter-spacing 2px
      padding 0

.badge
  background #FEFEFE
  border-radius 19px
  font-size 11px
  padding 4px 6px
  font-weight 500
  color #282828
  letter-spacing 0
  margin-left 5px
  opacity .7
  vertical-align initial
  @extend .box-shadow