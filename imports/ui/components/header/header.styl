html
  height: 100%

body
  min-height: calc(100% - 40px)
  display: flex
  flex-direction: column

content
  flex: 1 0 auto

header
  .my-navbar
    background: #111
    width: 100%
    height: 70px
    border: none
    border-radius: 0

  div
    div
      display inline-block

    p
      font-size: 25px
      margin-left: 10px
      color: white
      line-height: 40px

footer
  position: absolute
  width 100%
  height: 40px
  background-color: #f6f5f3

  p
    color: #8792a8
    text-align center
    line-height 40px
    margin-right: 10px
    margin-bottom: 0
