@import './variables.styl'

html,
body
  font-family "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  //font-family: 'Roboto', sans-serif;
  letter-spacing .3px
  margin 0
  min-height 100%
  height 100%
  display flex
  flex-direction column
  background-color #E0E0E0


.content-container
  padding-top 80px

.unlogined
  height 100%
  background url('img/bg.jpg') center center no-repeat
  background-size cover

.load-more
  display block
  background rgba(0, 0, 0, 0.05)
  text-align center
  height 4em
  line-height 4em
  margin 1em 0
  &:hover
    text-decoration none
    background rgba(0, 0, 0, 0.1)

.clearfix
  *zoom 1
  &:before,
  &:after
    content " "
    display table
  &:after
    clear both

.avatar
  border-radius 100%
  display inline-block
  line-height 0

.btn
  padding 0.7em 1em
  border-radius 6px
  font-size 1.2em

.form-control:focus,
input
  outline none
  box-shadow none

.link
  color #5e943d
  font-weight 400
  &:hover
    color #5e943d
    cursor pointer
    text-decoration underline

.box-shadow
  box-shadow 7px 7px 0 rgba(85, 85, 85, 0.025)